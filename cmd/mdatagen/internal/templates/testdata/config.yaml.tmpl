default:
all_set:
  {{- if .Metrics }}
  metrics:
    {{- range $name, $metric := .Metrics }}
    {{ $name }}:
      enabled: true
      attributes: [{{- range $index, $element := $metric.Attributes -}}{{ if $index }},{{ end }}"{{ (attributeInfo $element).Name }}"{{ end -}}]
    {{- end }}
  {{- end }}
  {{- if .Events }}
  events:
    {{- range $name, $_ := .Events }}
    {{ $name }}:
      enabled: true
    {{- end }}
  {{- end }}
  {{- if .ResourceAttributes }}
  resource_attributes:
    {{- range $name, $_ := .ResourceAttributes }}
    {{ $name }}:
      enabled: true
    {{- end }}
  {{- end }}
reaggregate_set:
  {{- if .Metrics }}
  metrics:
    {{- range $name, $_ := .Metrics }}
    {{ $name }}:
      enabled: true
      attributes: []
    {{- end }}
  {{- end }}
  {{- if .Events }}
  events:
    {{- range $name, $_ := .Events }}
    {{ $name }}:
      enabled: true
    {{- end }}
  {{- end }}
  {{- if .ResourceAttributes }}
  resource_attributes:
    {{- range $name, $_ := .ResourceAttributes }}
    {{ $name }}:
      enabled: true
    {{- end }}
  {{- end }}
none_set:
  {{- if .Metrics }}
  metrics:
    {{- range $name, $metric := .Metrics }}
    {{ $name }}:
      enabled: false
      attributes: [{{- range $index, $element := (defaultAttributes $metric.Attributes) -}}{{ if $index }},{{ end }}"{{ $element }}"{{ end -}}]
    {{- end }}
  {{- end }}
  {{- if .Events }}
  events:
    {{- range $name, $_ := .Events }}
    {{ $name }}:
      enabled: false
    {{- end }}
  {{- end }}
  {{- if .ResourceAttributes }}
  resource_attributes:
    {{- range $name, $_ := .ResourceAttributes }}
    {{ $name }}:
      enabled: false
    {{- end }}
  {{- end }}
{{- if and (or .Metrics .Events) .ResourceAttributes }}
filter_set_include:
  resource_attributes:
    {{- range $name, $attr := .ResourceAttributes }}
    {{ $name }}:
      enabled: true
      {{- if $.Metrics }}
      metrics_include:
        - regexp: ".*"
      {{- end }}
      {{- if $.Events }}
      events_include:
        - regexp: ".*"
      {{- end }}
    {{- end }}
filter_set_exclude:
  resource_attributes:
    {{- range $name, $attr := .ResourceAttributes }}
    {{ $name }}:
      enabled: true
      {{- if $.Metrics }}
      metrics_exclude:
        {{- if eq $attr.Type.String "Str" }}
        - strict: {{ $attr.TestValue }}
        {{- else }}
        - regexp: ".*"
        {{- end }}
      {{- end }}
      {{- if $.Events }}
      events_exclude:
        {{- if eq $attr.Type.String "Str" }}
        - strict: {{ $attr.TestValue }}
        {{- else }}
        - regexp: ".*"
        {{- end }}
      {{- end }}
    {{- end }}
{{- end }}
